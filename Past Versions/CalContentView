import SwiftUI

struct ContentView : View {
    
    @State var singleIsPresented = false
    @State var startIsPresented = false
    @State var multipleIsPresented = false
    @State var deselectedIsPresented = false
    
    //var rkManager1 = RKManager(calendar: Calendar.current, minimumDate: Date(), maximumDate: Date().addingTimeInterval(60*60*24*365), mode: 0)
    
    
    var body: some View {
        RKViewController(isPresented: self.$singleIsPresented, selectedDate: Date(), minimumDate: Date(), maximumDate: Date().addingTimeInterval(60*60*24*365))
        //Text(self.getTextFromDate(date: self.rkManager1.selectedDate))
            
    }
    
    func getTextFromDate(date: Date!) -> String {
        let formatter = DateFormatter()
        formatter.locale = .current
        formatter.dateFormat = "EEEE, MMMM d, yyyy"
        return date == nil ? "" : formatter.string(from: date)
    }

}

