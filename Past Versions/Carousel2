import Foundation
import SwiftUI
import Combine

struct TrendingView : View {
    
    @EnvironmentObject var viewRouter: ViewRouter
    @EnvironmentObject var cardCoordinator: CardCoordinator
    @State var page = 0
    
    var body: some View {
        VStack {
            Text("Trending").fontWeight(.heavy).font(.system(size: 32)).padding([.vertical, .horizontal]).frame(alignment: .leading)
            Carousel()
            //Page control are the dots
            PageControl(page: self.$page).padding(.top, 5)
        }
    }
}

struct Carousel : UIViewRepresentable {
    
    func makeUIView(context: Context) -> UIScrollView{
        let carouselWidth = Constants.width * CGFloat(data.count)
        let view = UIScrollView()
        view.isPagingEnabled = true
        view.contentSize = CGSize(width: carouselWidth, height: 1.0)
        view.bounces = true
        view.showsVerticalScrollIndicator = false
        view.showsHorizontalScrollIndicator = false
        //view.delegate = context.coordinator
        
        let hostingControllerView = UIHostingController(rootView: List())
        hostingControllerView.view.frame = CGRect(x: 0, y: 0, width: carouselWidth, height: Constants.height*0.5)
        hostingControllerView.view.backgroundColor = .clear
        view.addSubview(hostingControllerView.view)
        return view
    }
    
    func updateUIView(_ uiView: UIScrollView, context: Context) {}
    
    func makeCoordinator() -> Coordinator {
        return Carousel.Coordinator()
    }
        
//    func makeCoordinator() -> Coordinator {
//        return Carousel.Coordinator(parent: self)
//    }
//
//    class Coordinator : NSObject, UIScrollViewDelegate {
//        var carouselCoord : Carousel
//        init(parent: Carousel) {
//           carouselCoord = parent
//        }
//
//        //get current page
//        func scrollViewDidEndDecelerating(_ scrollView: UIScrollView) {
//            let page = Int(scrollView.contentOffset.x / Constants.width)
//            print(page)
//            self.carouselCoord.page = page
//        }
//    }

}

//CardCoordinator EnvironmentObject will update currentCard value and update in the view automatically
class CardCoordinator: NSObject, ObservableObject, UIScrollViewDelegate {
    let objectWillChange = PassthroughSubject<CardCoordinator,Never>()
    var currentCard: Int = 0 {
        didSet {
            objectWillChange.send(self)
        }
    }
    
    //get current page
    func scrollViewDidEndDecelerating(_ scrollView: UIScrollView) {
        let currentCard = Int(scrollView.contentOffset.x / Constants.width)
        print(currentCard)
    }
}

//create horizontal list, one card for each event in the list
struct List : View {
    var body: some View{
        HStack(spacing: 0){
            ForEach(data){ event in
                Card(data: event)
            }
        }
    }
}

struct Card : View {
    //@EnvironmentObject var cardCoordinator: CardCoordinator
    var data : Type
    
    var body: some View{
        VStack {
            VStack {
                Text(self.data.eventName)
            }
            .padding(.horizontal, 20)
            .padding(.vertical, 25)
            .background(Color.blue.opacity(0.5))
            .cornerRadius(20)
            .padding(.top, 25)
            //.padding(.vertical, cardCoordinator.currentCard == data.id ? 0 : 25)
            //.padding(.horizontal, cardCoordinator.currentCard == data.id ? 0 : 25)
            // Increasing Height And Width If Currnet Page Appears...
        }
        .frame(width: Constants.width)
        .animation(.default)
    }
}

//USED TO PREVENT INFINITE SCROLLING-  CONTROLS PAGING
struct PageControl : UIViewRepresentable {
    @Binding var page : Int
    
    func makeUIView(context: Context) -> UIPageControl {
        let view = UIPageControl()
        view.currentPageIndicatorTintColor = .black
        view.pageIndicatorTintColor = UIColor.black.withAlphaComponent(0.2)
        view.numberOfPages = data.count
        print("numberOfPages: ", data.count)
        return view
    }
    
    //update page indicator (dots)
    func updateUIView(_ uiView: UIPageControl, context: Context) {
        DispatchQueue.main.async {
            uiView.currentPage = self.page
        }
    }
}


